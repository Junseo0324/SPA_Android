<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8EDDD">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/writeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 내 정보 수정"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userInformationIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="164dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/sample_user"
                app:civ_border_overlay="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="80dp"
                app:hintEnabled="true"
                app:boxBackgroundMode="outline"
                app:layout_constraintTop_toBottomOf="@id/userInformationIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="이름을 입력해주세요."
                    android:inputType="text"
                    android:backgroundTint="#9E896A"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Name Label -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/input_name"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_email3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="80dp"
                app:hintEnabled="true"
                app:boxBackgroundMode="outline"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_email3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="이메일 주소를 입력해주세요."
                    android:inputType="textEmailAddress"
                    android:backgroundTint="#9E896A"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Label -->
            <TextView
                android:id="@+id/tv_email3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Email Address"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/input_email3"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="80dp"
                app:hintEnabled="true"
                app:boxBackgroundMode="outline"
                app:layout_constraintTop_toBottomOf="@id/tv_email3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="전화번호를 입력해주세요."
                    android:inputType="phone"
                    android:backgroundTint="#9E896A"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Label -->
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Phone Number"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/input_phone"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- School -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="80dp"
                app:hintEnabled="true"
                app:boxBackgroundMode="outline"
                app:layout_constraintTop_toBottomOf="@id/tv_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_school"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="학교를 입력해주세요."
                    android:inputType="text"
                    android:backgroundTint="#9E896A"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- School Label -->
            <TextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="School"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/input_school"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Major -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="80dp"
                app:hintEnabled="true"
                app:boxBackgroundMode="outline"
                app:layout_constraintTop_toBottomOf="@id/tv_school"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_major"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="전공을 입력해주세요."
                    android:inputType="text"
                    android:backgroundTint="#9E896A"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Major Label -->
            <TextView
                android:id="@+id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Major"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/input_major"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Year Spinner -->
            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:text="Year"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_major"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_year" />

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="80dp"
                app:hintEnabled="true"
                app:boxBackgroundMode="outline"
                app:layout_constraintTop_toBottomOf="@id/spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="비밀번호를 입력해주세요."
                    android:inputType="textPassword"
                    android:backgroundTint="#9E896A"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Password"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/input_pwd"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="156dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9E896A"
        android:text="수정하기"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
