<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".InformationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="내 정보 수정"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8EDDD">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/writeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 내 정보 수정"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userInformationIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sample_user"
                app:civ_border_overlay="true" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:backgroundTint="#9E896A"
                    android:hint="이름을 입력해주세요."
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Name Label -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_email3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_email3"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:backgroundTint="#9E896A"
                    android:hint="이메일 주소를 입력해주세요."
                    android:inputType="textEmailAddress" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:backgroundTint="#9E896A"
                        android:hint="비밀번호를 입력해주세요."
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Email Label -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"

                    android:backgroundTint="#9E896A"
                    android:hint="전화번호를 입력해주세요."
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Phone Label -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="학교"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_school"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:backgroundTint="#9E896A"
                    android:hint="학교를 입력해주세요."
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_major"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="전공을 입력해주세요."
                    android:inputType="text"
                    android:backgroundTint="#9E896A"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Major Label -->
            <TextView

                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전공"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:boxBackgroundMode="outline"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_major"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:backgroundTint="#9E896A"
                    android:hint="전공을 입력해주세요."
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Year Spinner -->
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="학년"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="156dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9E896A"
        android:text="수정하기"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


</LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="156dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#9E896A"
        android:text="수정하기"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
